<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품목록"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/image_jacket1"
        android:layout_width="206dp"
        android:layout_height="407dp"
        android:layout_below="@+id/text_title"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/jacket1"
        />

    <ImageView
        android:id="@+id/image_jacket2"
        android:layout_width="206dp"
        android:layout_height="407dp"
        android:layout_below="@+id/text_title"
        android:layout_toRightOf="@id/image_jacket1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/jacket2"
        />

    <TextView
        android:id="@+id/text_jacket1"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_jacket1"
        android:layout_marginTop="0dp"
        android:text="jacket-black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_jacket2"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_jacket2"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/text_jacket1"
        android:text="jacket-white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/price_jacket1"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_jacket1"
        android:text="89000"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/price_jacket2"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_jacket2"
        android:layout_toRightOf="@+id/price_jacket1"
        android:text="79000"
        android:textSize="20sp"
        />

    <CheckBox
        android:id="@+id/check_jacket1"
        android:layout_width="205dp"
        android:layout_height="42dp"
        android:layout_below="@+id/price_jacket1"
        android:text="이 상품 선택하기"
        android:textSize="15sp"
        />
    <CheckBox
        android:id="@+id/check_jacket2"
        android:layout_width="205dp"
        android:layout_height="42dp"
        android:layout_below="@+id/price_jacket1"
        android:layout_toRightOf="@+id/check_jacket1"
        android:text="이 상품 선택하기"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_hometobasket"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="장바구니에 담기"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btn_hometopurchase"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="구매하기"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />



</RelativeLayout>